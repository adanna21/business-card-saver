<%= form_for(contact, :html => {:class => "form"}) do |f| %>
  <div class="input-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="input-group">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="input-group">
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  </div>
   <div class="input-group">
    <%= f.label :company %>
    <%= f.text_field :company %>
  </div>
  <div class="input-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="input-group">
    <%= f.label :department %>
    <%= f.text_field :department %>
  </div>
  <div class="input-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit %>
<% end %>